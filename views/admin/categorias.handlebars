<h2>Lista de categoria:</h2>
<hr>

{{#each categorias}}

<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>{{slug}}</small> <br>
        <div class="d_flex gap-2">
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Editar categoria</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
            </form>
        </div>
    </div>
</div>

{{else}}
    <h5>Nenhuma categoria registrada.</h5>
{{/each}}

<a href="/admin/categorias/add"><button class="btn btn-success mt-4">Nova Categoria</button></a>